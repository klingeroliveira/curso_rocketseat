{% extends "layout.njk" %}


{% block head %}
    <title>Desafio 3-1: Página Cursos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <div id="box" >
        <h1>Conteúdos</h1>
    </div>

    <section class="cards">
        <div class="card" id="starter">
            <div class="card__image-box">
                <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Curso Starter">
            </div>
            <div class="card__title">
                <p><strong>Torne-se um programador desejado</strong> no mercado com esses cursos gratuitos</p>
            </div>
            <div class="card__details">
                <p><strong>8 módulos</strong></p>
                <p class="card__price">Free</p>
            </div>
        </div>

        <div class="card" id="launchbase">
            <div class="card__image-box">
                <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="Curso LaunchBase">
            </div>
            <div class="card__title">
                <p><strong>Domine programação do zero</strong> e tenha acesso às melhores oportunidades do mercado</p>
            </div>
            <div class="card__details">
                <p><strong>20 módulos</strong></p>
                <p class="card__price">Curso Pago</p>
            </div>
        </div>

        <div class="card" id="gostack">
            <div class="card__image-box">
                <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="GoStack">
            </div>
            <div class="card__title">
                <p><strong>Treinamento imersivo</strong> nas tecnologias mais modernas de desenvolvimento web e mobile</p>
            </div>
            <div class="card__details">
                <p><strong>3 módulos</strong></p>
                <p class="card__price">Curso Pago</p>
            </div>
        </div>
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <a class="maximize-modal">
                <i class="material-icons">minimize</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/scripts.js"></script>

{% endblock %}