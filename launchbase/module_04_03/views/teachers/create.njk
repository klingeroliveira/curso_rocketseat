{% extends "layout.njk" %}

{% block head %}
    <title>Teachers</title>
{% endblock head %}

{% block content %}

    <form class="card" method="POST" action="/teachers">

        <section class="avatar" style="background: url(https://source.unsplash.com/collection/9707699/500x500) no-repeat center center / cover"></section>
        
        <section class="dados">
            
            <h3>Cadastrar Professor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div><input type="url" name="avatar_url" placeholder="http://"></div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div><input type="text" name="nome" placeholder="Nome Completo"></div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div><input type="date" name="data_nascimento"></div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="grau_escolaridade">
                        <option value="" selected data-default>Selecione uma opção</option>
                        <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                        <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                        <option value="Metrado">Metrado</option>
                        <option value="Doutorado">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="tipo_aula" value="P" checked>Presencial</span>
                    <span><input type="radio" name="tipo_aula" value="D">À distância</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div><input type="text" name="area_atuacao" placeholder="Separe por vírgula as diciplinas."></div>
            </div>

            <button type="submit">SALVAR</button>

        </section>

    </form>

{% endblock content %}