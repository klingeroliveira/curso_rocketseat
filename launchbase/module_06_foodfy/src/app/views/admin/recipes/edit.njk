{% extends "admin/layout.njk" %}

{% block content %} 

    <section class="cabecalho">
            <h3>Alterando receita</h3>

            <button type="submit" form="formDeleteRecipe" name="button_delete_edit" class="button_delete">Deletar</button>
            <button type="submit" form="formEditRecipe" name="button_salvar_edit" class="button">Salvar receita</button>
    </section>


    <form id="formEditRecipe" class="form_recipes" method="Post" action="/admin/recipes?_method=PUT" enctype="multipart/form-data"> 
        
        <input type="hidden" name="id" value="{{ recipe.id }}">

        <section class="dados">
            {% include "admin/recipes/fields.njk" %}
        </section>

    </form>

    <form id="formDeleteRecipe" class="form_recipes" method="Post" action="/admin/recipes?_method=DELETE" > 
            <input type="hidden" name="id" value="{{ recipe.id }}">
    </form>


    {% include "admin/confirm-delete.njk"%}


{% endblock %}