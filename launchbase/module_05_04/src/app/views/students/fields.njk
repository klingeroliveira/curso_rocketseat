<div class="item">
    <div>Avatar URL</div>
    <div><input type="url" name="avatar_url" placeholder="http://" value="{{ student.avatar_url }}"></div>
</div>

<div class="item">
    <div>Nome</div>
    <div><input type="text" name="nome" placeholder="Nome Completo" value="{{ student.nome }}"></div>
</div>

<div class="item">
    <div>E-mail</div>
    <div><input type="email" name="email" value="{{ student.email }}"></div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div><input type="date" name="data_nascimento" value="{{ student.data_nascimento }}" ></div>
</div>

<div class="item">
    <div>Ano Escolar</div>
    <div>
        <select name="ano_escolar">
            <option value="" data-default="data-default">Selecione uma opção</option>
            <option value="6ef" {% if student.ano_escolar == "6ef" %} selected {% endif %}>6º Ano - Ensino Fundamental II</option>
            <option value="7ef" {% if student.ano_escolar == "7ef" %} selected {% endif %}>7º Ano - Ensino Fundamental II</option>
            <option value="8ef" {% if student.ano_escolar == "8ef" %} selected {% endif %}>8º Ano - Ensino Fundamental II</option>
            <option value="9ef" {% if student.ano_escolar == "9ef" %} selected {% endif %}>9º Ano - Ensino Fundamental II</option>
            <option value="1em" {% if student.ano_escolar == "1em" %} selected {% endif %}>1º Ano - Ensino Médio</option>
            <option value="2em" {% if student.ano_escolar == "2em" %} selected {% endif %}>2º Ano - Ensino Médio</option>
            <option value="3em" {% if student.ano_escolar == "3em" %} selected {% endif %}>3º Ano - Ensino Médio</option>

        </select>
    </div>
</div>

<div class="item">
    <div>Carga horária semanal</div>
    <div> <input type="number" name="carga_horaria" value="{{ student.carga_horaria }}"> </div>
</div>

<div class="item">
    <div>Professor</div>
    <div> 
        <select name="teacher">
            <option value="" data-default="data-default">Selecione uma opção</option>
            {% for teacher in teachers %}
                <option value="{{teacher.id}}" {% if student.teacher_id == teacher.id %} selected {% endif %}>{{teacher.nome}}</option>
            {% endfor %}
        </select> 
    </div>
</div>


<button type="submit">SALVAR</button>