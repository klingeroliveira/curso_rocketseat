{% extends "layout.njk" %}

{% block head %}
    <title>Students</title>
{% endblock head %}

{% block content %}

    <div class="card table-container">
        <a href="/students/create"> NOVO </a>
        <table>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Email</th>
                    <th>Ano Escolar</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span class="table-avatar" style="background-image: url({{student.avatar_url}})"></span>
                            {{student.nome}}
                        </td>

                        <td> 
                            {{ student.email }}
                        </td>
                        <td> 
                            {{ student.ano_escolar }}
                        </td>
                        <td>
                            <a href="/students/{{student.id}}">
                                ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}