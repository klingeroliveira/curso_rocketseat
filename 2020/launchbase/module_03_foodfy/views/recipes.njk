{% extends "layout.njk" %}

{% block content %}

    
    <section class="cards">
        {% for item in items %}
        <div class="card" id={{item.id}}>
            <div class="card_img">
                <img src="{{item.image}}" alt="">
            </div>
            <div class="card_content">
                <p class="p_card_content">{{item.title}}</p>
            </div>
            <div class="card_info">
                <p class="p_card_info">{{item.author}}</p>
            </div>
        </div>
        {% endfor %}
    </section>

    <script src="/scripts.js"></script>
{% endblock %}