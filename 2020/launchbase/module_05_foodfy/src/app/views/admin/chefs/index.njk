{% extends "admin/layout.njk" %}

{% block content %}

    <section class="cabecalho">
        <h3>Gerenciar Chefs</h3>      
        <div></div>
        <a href="/admin/chefs/create" class="button">Novo Chef</a>
    </section>

    <section class="cards_admin_list_chefs">
        {% for item in items %}
        
            <div class="card_admin_chef" id={{item.id}}>
                <section>
                    <div class="card_admin_chef_img">
                        <img src="{{item.avatar_url}}" alt="">
                    </div>
                </section>
                
                <section>
                    <div class="card_admin_chef_content">
                        <p class="p_card_content">{{item.name}}</p>
                    </div>
                    <a href="chefs/{{item.id}}" class="button">Visualizar</a>
                </section>
            </div>
        {% endfor %}

    </section>

{% endblock %}