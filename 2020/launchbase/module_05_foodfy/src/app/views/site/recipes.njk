{% extends "site/layout.njk" %}

{% block form_find_recipes %}
    {%include "site/find_recipes.njk"%}
{% endblock form_find_recipes %}

{% block content %}

    <div class="titleFind">
        {{titleFind}}
    </div>
    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card_img">
                    <img src="{{item.image}}" alt="">
                </div>
                <div class="card_content">
                    <p class="p_card_content">{{item.title}}</p>
                </div>
                <div class="card_info">
                    <p class="p_card_info">{{item.author}}</p>
                </div>
            </div>
        {% endfor %}
    </section>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
        >
    </div>
{% endblock %}